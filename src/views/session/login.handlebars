<div class="row my-5 justify-content-center">
  <div class="col-sm-12 col-md-4 my-5" >
    <form action="/session/login" method="POST" class="card card-body rounded-0 shadow" id="login">
      <h2 class="title" style="color:rgba(73, 177, 177, 0.665)">Login</h2>
      <label for="email" class="form-label">Correo: </label>
      <input type="email" id="email" name="email" class="form-control" required>
      <br>
      <label for="password" class="form-label">Clave: </label>
      <input type="password" id="password" name="password" class="form-control" required></input>
      <br>
      <button type="submit" class="btn btn-dark">Ingresar</button>
      <br>
      <a href="/session/github" class="btn btn-light" ><img src='https://th.bing.com/th/id/OIP.p36DliTskuZ4--96CuD1wQHaHw?w=173&h=181&c=7&r=0&o=5&dpr=1.3&pid=1.7' class="material-icons button-icon" width="35" height="35" style="border-radius: 50%;"> Inicia con GitHub</a>
      <br>
      <a href="/session/google" class="btn btn-light"><img src='data:image/png;base64,' class="material-icons button-icon"> Inicia con Google</a>
      <br>
      <a href="/session/register" class="btn btn-link link-info" style="">Registrarse</a>
      <a href="/session/newpass" class="btn btn-link link-dark" style="">Olvide la cotrasena</a>
    </form>
    {{#if error}}
      <div id="alerta-enviado" style="color: red">{{error}}</div>
    {{/if}}
  </div>
</div>

<script>
  $(document).ready(() => {
    $('#login').submit((event) => {
      event.preventDefault();
      $('#email').val('');
      $('#password').val('');          
    });
  });
</script>